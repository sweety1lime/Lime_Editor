@{
    Layout = null;
}
@model Lime_Editor.Models.User;
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link href="~/css/signin/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/main/bootstrap.css" rel="stylesheet" />
    <link href="~/css/main/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/signin/style.css" rel="stylesheet" />
    <link href="~/css/sign.css" rel="stylesheet" />
    <link href="~/css/main/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/main/prettyPhoto.css" rel="stylesheet" />
    <link href="~/css/main/animate.css" rel="stylesheet" />
    <link href="~/css/main/mainMeow.css" rel="stylesheet" />
    <link href="~/css/main/responsive.css" rel="stylesheet" />
    <link href="~/css/main/Themes.css" rel="stylesheet" />
    <title>Личный кабинет</title>
</head>
<body>
    <div class="">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" style="font-size: 40px;" href="#">LIME</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Dropdown</a>
                            <div class="dropdown-menu " data-popper-placement="bottom-start">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
        <div class="">
            <div class="container">
                <div class="row">
                    <div class="col-12 cd-lg-10" style="text-align: center;">
                        <h2 style="margin-left: 0px;">Личный кабинет</h2>
                        <p>Здеь вы можете обновить данные для входа, и отображаемую информацию</p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-10">
                        <form class="row" style="margin-bottom: 5px;" asp-action="EditProfile" asp-controller="Home">
                            <h2 style="">Отображаемая информация</h2>
                            <fieldset>
                                <div class="form-group row">
                                    <label for="" class="col-10 cd-4 form-label mt-4" style="width: 224px">Имя</label>
                                    <input type="text" class="col-10 cd-4 form-label form-control" asp-for="@Model.Name" name="name" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Name" placeholder="Иван" style=" width: 250px !important; margin-bottom: 0px;margin-top: 8px;">
                                </div>
                                <div class="form-group row">
                                    <label for="" style=" width: 224px !important; margin-bottom: 0px;margin-top: 8px;" class="col-10 cd-4 form-label mt-4">Фамилия</label>
                                    <input type="text" class="col-10 cd-4 form-label form-control" asp-for="@Model.LastName" name="lastname" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.LastName" placeholder="Иванов" style=" width: 250px !important; margin-bottom: 0px;margin-top: 8px;">
                                </div>
                                
                            </fieldset>

                            <h2 style="">Данные для входа</h2>
                            <fieldset>
                                <input asp-for="@Model.IdUser" type="number" name="idUser" hidden/>
                                <div class="form-group row">
                                    <label for="" class="col-10 cd-4 form-label mt-4" style="width: 260px">Логин</label>
                                    <input placeholder="Логин" asp-for="@Model.Login" name="login" type="text" pattern="[A-z0-9.]{2,50}" minlength="2" value="@Model.Login" autocomplete="off" maxlength="50" autofocus="" class="form-control" required>
                                    <span asp-validation-for="Login"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="" style=" width: 600px !important; margin-bottom: 0px;margin-top: 8px;" class="col-10 cd-4 form-label mt-4">Пароль</label>
                                    <input type="password" style=" width: 330px !important; margin-bottom: 0px;margin-top: 8px;" class="col-10 cd-4 form-label form-control" id="exampleInputPassword1" asp-for="@Model.Password" name="password" value="@Model.Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="exampleInputEmail1" class="form-label mt-4">Эл.Почта</label>
                                    <input asp-for="@Model.Email" name="email" value="@Model.Email" type="email" class="form-control" id="exampleInputEmail1" required autocomplete="off" aria-describedby="emailHelp" placeholder="example.mail.ru">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="col-2 cd-4">
                                    <button type="submit" href="" class="btn btn-success" style="outline: none; box-shadow: none;background: transparent; border: 3px solid; border-color: #43cc29; color: #43cc29; width: auto; height: auto;"><i class=""></i>Сохранить</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/main/jquery.js"></script>
    <script src="~/js/main/jquery.scrollUp.min.js"></script>
    <script src="~/js/main/bootstrap.min.js"></script>
    <script src="~/js/main/jquery.prettyPhoto.js"></script>
    <script src="~/js/main/main.js"></script>
    <script src="~/js/main/Themes.js"></script>
</body>
</html>