@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link href="~/css/signin/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/signin/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/signin/style.css" rel="stylesheet" />
    <link href="~/css/sign.css" rel="stylesheet" />
    <title>Вход</title>
</head>
<body>
    <div class="page">
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div style="text-align: center">
                    <h1>Вход</h1>
                    <p class="">У вас еще нет аккаунта? <a href="#">Создайте его!</a></p>
                </div>
                <div class="row justify-content-md-center">

                    <div class="col">
                        <form action="#" method="post">
                            <div class="form-group first">
                                <label for="username">Email</label>
                                <input type="text" class="form-control" id="username">

                            </div>
                            <div class="form-group last mb-3">
                                <label for="password">Пароль</label>
                                <input type="password" class="form-control" id="password">

                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Запомнить меня</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a href="#" class="forgot-pass">Забыли пароль?</a></span>
                            </div>

                            <input type="submit" value="Войти"  class="btn-lg btn btn-outline-primary">
                        </form>
                    </div>
                    <div class="vl"></div>
                    <div class="col align-self-center social-login">
                        <a href="#" class="facebook btn d-flex justify-content-center align-items-center">
                            <span class="icon-facebook mr-3"></span> Login with Facebook
                        </a>
                        <a href="#" class="twitter btn d-flex justify-content-center align-items-center">
                            <span class="icon-twitter mr-3"></span> Login with  Twitter
                        </a>
                        <a href="#" class="google btn d-flex justify-content-center align-items-center">
                            <span class="icon-google mr-3"></span> Login with  Google
                        </a>
                    </div>
                </div>

            </div>
        </div>


    </div>



    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>